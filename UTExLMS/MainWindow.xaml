<Window x:Class="UTExLMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UTExLMS"
        xmlns:views="clr-namespace:UTExLMS.Views.UserControlView"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="263"/>
                <ColumnDefinition Width="169"/>
                <ColumnDefinition Width="216"/>
                <ColumnDefinition Width="190"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>

            <!--<Image Source="Assets/ute_logo.png" Grid.Column="0" Margin="10,5,10,5"/>-->
            <TextBlock Text="Trang chủ" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <TextBlock Text="Bảng điều khiển" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <TextBlock Text="Khóa học của tôi" Grid.Column="3" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0,10,0"/>
            <!--<Image Source="Assets/BellGray.png" Grid.Column="4" Margin="0,0,10,0" HorizontalAlignment="Right"/>-->
            <!--<Image Source="Assets/avatar.png" Grid.Column="5" Margin="0,0,30,0" HorizontalAlignment="Right"/>-->
            <Border BorderBrush="Red" BorderThickness="2">
                <Image Grid.Column="0" Margin="0, 10, 0, 10">
                    <Image.Source>
                        <BitmapImage UriSource="/Assets/ute_logo.png" />
                    </Image.Source>
                </Image>
            </Border>


            <Image Grid.Column="4" Margin="0,0,10,0" HorizontalAlignment="Right">
                <Image.Source>
                    <BitmapImage  UriSource="/Assets/BellGray.png" />
                </Image.Source>
            </Image>
            <Image Grid.Column="5" Margin="0,0,30,0" HorizontalAlignment="Right">
                <Image.Source>
                    <BitmapImage  UriSource="/Assets/avatar.png" />
                </Image.Source>
            </Image>
        </Grid>

        <Frame Grid.Row="1" Background="#EEF2F8" Content="{Binding Body}" />

    </Grid>
</Window>
