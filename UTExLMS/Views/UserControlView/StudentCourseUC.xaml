							<Button Content="Grades" Margin="10,0,0,0"/>
						</ToolBar>
					</Grid>
				</Grid>

				<Grid Grid.Row="1">
					<materialDesign:Card Background="{DynamicResource MaterialDesignBackground}" Margin="50, 0, 50, 0">
